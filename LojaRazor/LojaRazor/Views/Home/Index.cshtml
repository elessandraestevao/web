     <div class="hero-unit">
        <h1>Queima de estoque</h1> 
        <p>Produtos com 20% de desconto!</p>
     </div>
     <div class="row-fluid">
        @foreach (var produto in ViewBag.Produtos)
        {
            <div class="span4">
                <h2>@produto.Nome</h2>
                <p>@produto.Descricao</p>
                <p>@produto.Preco</p>
            </div>
        }
    </div>

