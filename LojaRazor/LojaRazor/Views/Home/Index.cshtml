@using LojaRazor.Internacionalizacao     
    <div class="hero-unit">
        <h1>@Mensagens.QueimaDeEstoque</h1> 
        <p>@Mensagens.Produtos20PorCentoDesconto</p>
     </div>
     <div class="row-fluid">
        @foreach (var produto in ViewBag.Produtos)
        {
            <div class="span4">
                <h2>@produto.Nome</h2>
                <p>@produto.Descricao</p>
                <p>@produto.Preco</p>
            </div>
        }
    </div>

